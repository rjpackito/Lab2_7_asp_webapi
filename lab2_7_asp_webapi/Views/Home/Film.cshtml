@section scripts {
    @Scripts.Render("~/bundles/func")
}

<script src="@Url.Content("~/scripts/jquery-2.1.4.min.js")" type="text/javascript"></script>
<div class="page-header">
    <h1>Управление списком фильмов</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Фильмы</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: films">
                    <li>
                        <strong><span data-bind="text: FilmName"></span></strong>
                        <small><a href="#" data-bind="click: $parent.getFilm">Редактировать</a></small>
                        <small><a href="#" data-bind="click: $parent.deleteFilm">Удалить</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>


    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Редактирование фильма</h2>
            </div>

            <div class="panel-body">
                <form role="form" class="form-horizontal" data-bind="submit: editFilm">
                    <div class="form-group">
                        <label for="editFilm" class="col-sm-2 control-label">Название:</label>
                        <div class="col-sm-offset-1 col-sm-8">
                            <input type="text" class="form-control" id="editFilm" data-bind="value: film().FilmName" placeholder="Название фильма" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Сохранить</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Добавить фильм</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addFilm">
                    <div class="form-group" data-bind="with: newfilm">
                        <label for="inputFilmName" class="col-sm-2 control-label">Название:</label>
                        <div class="col-sm-offset-1 col-sm-8">
                            <input type="text" class="form-control" id="inputFilmName"
                                   data-bind="value: FilmName" placeholder="Название фильма" />
                        </div>

                    </div>
                    <button type="submit" class="btn btn-default">Добавить</button>
                </form>
            </div>
        </div>
    </div>
</div>
